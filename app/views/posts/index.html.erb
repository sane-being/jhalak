<% content_for :title, "Posts" %>
<h1>Posts</h1>
<div id="posts">
  <ul class="flex flex-col gap-4 items-stretch">
    <% @posts.each do |post| %>
      <li class="rounded-2xl shadow-md bg-white p-6 flex flex-col gap-4">
        <h3><%= link_to "Post #{post.id}", post %></h3>
        <div class="flex items-center gap-3">
          <%= render "users/profile_picture", size: 'thumb', user: post.user %>
          <%= link_to post.user.username, post.user %>
        </div>
        <%= render post %>
      </li>
    <% end %>
  </ul>
</div>
