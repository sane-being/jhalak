<h3>Post <%= @post.id %></h3>
<% if allowed_to?(:edit?, @post) %>
  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %>
    <%= button_to "Destroy this post", @post, method: :delete %>
  </div>
<% end %>

<%= render @post %>
<%= render "like_button", post: @post %>
<%= link_to "Liked by:", post_likes_path(@post) %>
