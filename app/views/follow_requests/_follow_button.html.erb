<% if current_user && (user != current_user) %>
  <% if follow_request_to(user).nil? %>
    <%= form_with model: FollowRequest.new do |form| %>
      <%= form.hidden_field :user_id, value: user.id %>
      <%= form.submit "Follow", class:"cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-1.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    <% end %>
  <% else %>
    <%= button_to (follow_request_to(user).accepted ? "Unfollow" : "Cancel Request"), follow_request_to(user), method: :delete, class:"cursor-pointer bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-1.5 me-2 mb-2 dark:bg-gray-600 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800" %>
  <% end %>
<% end %>