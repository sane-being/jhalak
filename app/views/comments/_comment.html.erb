<div>
  <p>
    <strong>User:</strong>
    <%= link_to comment.user.username, comment.user %>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>

  <% if comment.user == current_user %>
    <p><%= button_to "Delete comment", [comment.post, comment], method: :delete %></p>
  <% end %>
</div>
