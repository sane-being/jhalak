<%= form_with(
  model: [post, Comment.new(user: current_user)],
  class:"flex w-full items-center justify-between gap-2"
  ) do |form| %>
  <div class="relative w-full">
    <%= form.textarea :content, placeholder: "Add a comment...", class:"w-full aria-disabled:cursor-not-allowed outline-none focus:outline-none text-stone-800 dark:text-white placeholder:text-stone-600/60 transition-all ease-in disabled:opacity-50 disabled:pointer-events-none select-none duration-100 peer" %>
  </div>
  <%= form.submit "Post", class:"cursor-pointer font-bold text-sky-500 hover:text-sky-700 inline-flex items-center justify-self-end" %>
<% end %>
