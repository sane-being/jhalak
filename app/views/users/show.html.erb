<h1>Profile</h1>
<%= render "profile_picture", size: "small", user: @user %>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<div>
  <% if allowed_to?(:edit?, @user) %>
    <%= link_to "Edit Profile", edit_user_path(@user) %>
  <% else %>
    <%= render "follow_requests/follow_button", user: @user %>
  <% end %>
</div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<p>
  <strong>Website:</strong>
  <%= @user.website %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<h2>Posts</h2>

<div id="posts">
  <ul>
    <% @posts.each do |post| %>
      <li>
        <h3><%= link_to "Post #{post.id}", post %></h3>
        <%= render post %>
        <%= render "likes/like_button", post: post %>
        <%= link_to "Liked by:", post_likes_path(post) %>
      </li>
    <% end %>
  </ul>
</div>