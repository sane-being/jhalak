<div class="flex flex-col gap-8 justify-center grow items-center w-full">
  <h2 class="font-bold text-xl">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col w-full gap-4 border-b-1 border-gray-300 pb-4">
      <div class="field flex flex-col">
        <%= f.label :email, class:"font-bold" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"account-input" %>
      </div>
      <div class="field flex flex-col">
        <%= f.label :password, class:"font-bold" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"account-input" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions self-center my-4">
        <%= f.submit "Log in", class:"account-button normal-button" %>
      </div>
    </div>
  <% end %>
  <div class="flex flex-col items-center gap-2">
    <%= render "users/shared/links" %>
  </div>
</div>
