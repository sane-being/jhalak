<!-- variable to be passed & its options- 
size: 
  'thumb'(50*50), 
  'small'(100*100), 
  'medium'(300*300) 
-->

<% dp_url = user.profile_picture.present? ? user.profile_picture&.variant(size.to_sym) : 'stock_profile_picture.svg' %>
<%= link_to (image_tag dp_url, class: "#{size} border-1 border-gray-300 rounded-full object-cover"), user %>