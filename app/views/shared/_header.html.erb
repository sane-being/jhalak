<% if user_signed_in? %>
  <header class="w-72 h-screen border-r-1 border-x-gray-300 px-4 fixed">
    <%= link_to image_tag('instagram-wordmark.svg', class: "header-logo max-w-1/2 py-8 cursor-pointer"), root_path %>
    <div class="grid gap-2">
      <%= link_to root_path, class:"p-3 text-base font-medium text-lg rounded-lg hover:bg-gray-100"  do %>
        Home (Posts)
      <% end %>
      <%= link_to new_post_path, class:"p-3 text-base font-medium text-lg rounded-lg hover:bg-gray-100" do %>
        New post
      <% end %>
      <%= link_to users_path, class:"p-3 text-base font-medium text-lg rounded-lg hover:bg-gray-100" do %>
        Users
      <% end %>
      <%= link_to follow_requests_path, class:"p-3 text-base font-medium text-lg rounded-lg hover:bg-gray-100" do %>
        Follow Requests
      <% end %>
      <%= link_to user_path(current_user), class:"p-3 text-base font-medium text-lg rounded-lg hover:bg-gray-100" do %>
        Profile
      <% end %>
      <%= link_to edit_user_registration_path, class:"p-3 text-base font-medium text-lg rounded-lg hover:bg-gray-100" do %>
        Account Settings
      <% end %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "p-3 text-base font-medium text-lg rounded-lg hover:bg-gray-100 w-full text-left cursor-pointer" %>
    </div>
  </header>
<% else %>
  <div class="relative">
    <%= link_to image_tag('instagram-wordmark.svg', class: "fixed top-0 left-1/2 transform -translate-x-1/2 z-50 max-w-[320px] py-16"), root_path %>
  </div>
<% end %>
